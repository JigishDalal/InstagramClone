<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:paddingBottom="12dp">

    <ImageView
        android:id="@+id/image_feed"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/ic_launcher_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="24dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_feed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="name"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        app:layout_constraintLeft_toRightOf="@id/image_feed"/>

    <TextView
        android:id="@+id/location_feed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kitchen and Bar"
        app:layout_constraintLeft_toLeftOf="@id/name_feed"
        app:layout_constraintTop_toBottomOf="@id/guideline" />

    <ImageView
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_feed"
        app:layout_constraintBottom_toTopOf="@id/image_feed"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_more"/>

    <ImageView
        android:id="@+id/photo_feed"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/image_feed"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <ImageView
        app:layout_constraintTop_toBottomOf="@id/photo_feed"
        app:layout_constraintLeft_toRightOf="parent"
        android:id="@+id/like_feed"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_heart"/>


    <ImageView
        android:id="@+id/comment_feed"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/ic_comment"
        app:layout_constraintTop_toBottomOf="@id/photo_feed"
        app:layout_constraintLeft_toRightOf="@id/like_feed"/>
    
    <ImageView
        android:id="@+id/direct_feed"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/ic_direct"
        app:layout_constraintTop_toBottomOf="@id/photo_feed"
        app:layout_constraintLeft_toRightOf="@id/comment_feed"/>
    
    <ImageView
        android:id="@+id/save_feed"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_save"
        app:layout_constraintTop_toBottomOf="@id/photo_feed"
        app:layout_constraintRight_toLeftOf="parent"/>

    <TextView
        android:id="@+id/likes_feed_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:text="257 likes"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/save_feed"/>

    <TextView
        android:id="@+id/comment_feed_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:text="View all 7 comments"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/likes_feed_text_view"/>

    <TextView
        android:id="@+id/days_feed_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:text="2 DAYS AGO"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comment_feed_text_view"/>

</android.support.constraint.ConstraintLayout>